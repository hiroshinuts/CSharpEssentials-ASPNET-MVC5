@model IEnumerable<Mvc_Ajax.Models.Time>
@*Hora Atual : @DateTime.Now.ToLongTimeString()*@
<table style="font-family:Arial; border: 1px solid black; background-color:aqua" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pontos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pontos)
        </td>
    </tr>
}
</table>
@ViewBag.Mensagem

