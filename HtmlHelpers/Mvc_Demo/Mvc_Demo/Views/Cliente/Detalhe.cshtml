@model Mvc_Demo.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalhe</title>
</head>
<body>
    <div>
        <fieldset>
            <legend>Cliente Methodo Get - Do controller Tipado para a Tela</legend>

            @*BeginForm recebe "Action", "Controlador"*@
            @using (Html.BeginForm("SalvarCliente", "Cliente"))
            {
                <br />
                <p>Código : @Html.TextBoxFor(x => x.ClienteId, new { @data_val_number = "number" }) </p>
                <p>Nome : @Html.TextBoxFor(x => x.Nome) </p>
                <p>Email : @Html.TextBoxFor(x => x.Email) </p>
                <p>Telefone : @Html.TextBoxFor(x => x.Telefone) </p>
                <p>
                    <input type="submit" value="Enviar" />
                </p>

            }

        </fieldset>
    </div>


</body>
</html>
